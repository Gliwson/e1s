<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="Gliwson" id="1581034786226-1">
        <createTable tableName="discount">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="female" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="kid" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="male" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20190624005436-1-data" author="Gliwson">
        <loadData
                file="db/changelog/data/discount.csv"
                separator=";"
                tableName="discount">
            <column name="id" type="numeric"/>
            <column name="male" type="numeric"/>
            <column name="female" type="numeric"/>
            <column name="kid" type="numeric"/>
        </loadData>
    </changeSet>

</databaseChangeLog>
